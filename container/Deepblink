FROM nvidia/cuda:10.1-cudnn7-runtime-ubuntu18.04
#set up environment
RUN apt-get update && apt-get install --no-install-recommends --no-install-suggests -y curl
RUN apt-get -y install python3 python3-pip unzip fontconfig libglfw3-dev libgles2-mesa-dev
RUN python3 -m pip install --upgrade pip
RUN pip3 install deepblink pandas ome-zarr fire
RUN deepblink download -i vesicle
